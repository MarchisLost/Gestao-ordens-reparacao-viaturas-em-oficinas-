    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });
        });

        //Detect when add worker is pressed
        document.getElementById('botaoAdicionarFuncionario').addEventListener('click', (e) => {
            let formAddFuncinario = document.querySelector('#form1')
            //Get the worker name
            var url = window.location.href
            var nomeAdmin = url.replace('http://localhost:3000/admin/','');

            document.getElementById('nomeAdmin').value = nomeAdmin

            formAddFuncinario.setAttribute('action', 'http://localhost:3000/adicionarFuncionario')
        })

        let funcData
        let funcID = document.getElementById("listaFuncColuna")
        //Fetch data about all workers
        fetch('http://localhost:3000/getFuncionarios').then(
            async (result) => {
                funcData = await result.json()
                //console.log("funcData", funcData)

                //Show all the workers
                if (funcData.length > 0) {
                    for (i = 0; i < funcData.length; i++) {
                        //Create paragrafo de cada funcionario
                        let linha = document.createElement('p')
                        linha.setAttribute('id', 'funcionario' + [i + 1])
                        linha.setAttribute('style', "display: flex; justify-content: space-between; color:black;")
                        linha.innerHTML = funcData[i].username + ": " + funcData[i].cargo

                        // Criar botao editar
                        temp = document.createElement('button')
                        temp.setAttribute("id", "botaoEditar" + [i + 1])
                        temp.setAttribute("class", "btn btn-primary editBTN")
                        temp.setAttribute("data-toggle", "modal")
                        temp.setAttribute("aria-expanded", "false")
                        temp.setAttribute("data-target", "#exampleModal2")
                        temp.setAttribute("onclick", "checkID(this.id)")
                        temp.setAttribute("style", "margin-right: 5px; margin-left: 5px")
                        temp.innerHTML = "Editar"

                        //Appends
                        linha.appendChild(temp)
                        funcID.appendChild(linha)
                    }
                } else {
                    linha = document.createElement('p')
                    linha.setAttribute('id', 'funcionario')
                    linha.setAttribute('style', "display:-webkit-inline-box;")
                    linha.innerHTML = 'Não está a ser possivel aceder-se à base de dados'
                    funcID.appendChild(linha)
                }
            }
        )
        //This func detects the id of buttons pressed so i can send the right data with the form
        function checkID(rawid) {
            let id = rawid.replace('botaoEditar', '')
            //Insert Values on the modal form
            document.getElementById('nome2').value = funcData[id-1].nome
            document.getElementById('cargo2').value = funcData[id-1].cargo
            document.getElementById('email2').value = funcData[id-1].email
            document.getElementById('idade2').value = funcData[id-1].idade
            document.getElementById('morada2').value = funcData[id-1].morada
            document.getElementById('password2').value = funcData[id-1].password
            document.getElementById('telemovel2').value = funcData[id-1].telemovel
            document.getElementById('username2').value = funcData[id-1].username
        }

        //Detect when edit worker is pressed
        document.getElementById('botaoEditarFuncionario').addEventListener('click', async (e) => {
            let formEditFuncinario = document.querySelector('#form2')
            //Get the worker name to send it
            let url = window.location.href
            let nomeAdmin = url.replace('http://localhost:3000/admin/','')
            document.getElementById('nomeAdmin2').value = nomeAdmin
            
            formEditFuncinario.setAttribute('action', 'http://localhost:3000/editarFuncionario')
        })

        document.getElementById('botaoAdicionarTarefa').addEventListener('click', async (e) => {
              let formAddTarefa = document.querySelector('#form3')
              //Get the worker name to send it
              let url = window.location.href
              let nomeAdmin = url.replace('http://localhost:3000/admin/','');
              document.getElementById('nomeAdmin3').value = nomeAdmin
              
              formAddTarefa.setAttribute('action', 'http://localhost:3000/addChecklist')
            })
    </script>

